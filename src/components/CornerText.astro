---
type Props = {
  name?: string
  className?: string
}

const { name, className } = Astro.props

const spaces = " ".repeat(2)
const title = ((name ?? "NAME HERE") + spaces).repeat(50)
---

<div class:list={["absolute max-w-full overflow-clip", className]}>
  <span class="moving-text inline-block w-max text-3xl">
    {title}
  </span>
</div>

<style>
  .moving-text {
    animation: 20s infinite forwards spiiin;
    animation-timing-function: linear;
  }

  @keyframes spiiin {
    0% {
      transform: translateX(-10%);
    }

    100% {
      transform: translateX(10%);
    }
  }
</style>
