---
import { getEntry } from "astro:content"

import { generateI18nStaticPaths, useI18n } from "../../i18n/ui"
import Layout from "../../layouts/Layout.astro"
import Main from "../../components/Main.astro"
import Footer from "../../components/Footer.astro"
import Header from "../../components/Header.astro"
import MiniLocaleSwitch from "../../components/MiniLocaleSwitch.astro"
import Source from "../../components/SourceLink.astro"
import Link from "../../components/Link.astro"
import { Grain } from "../../components/Preact/grain"

export const getStaticPaths = generateI18nStaticPaths

const { useI18Text: t, lang } = useI18n(Astro.url)
const presentation = await getEntry("presentation", `${lang}/presentation`)
const { Content } = await presentation.render()
---

<Layout title={t("nav.home")}>
  <Grain client:load={true} />
  <MiniLocaleSwitch />
  <Main>
    <div
      class="flex w-full flex-col rounded-3xl border-2 border-neutral-800 px-10 py-6"
    >
      <div class="flex justify-between align-baseline">
        <span
          class="bg-gradient-to-bl from-light-highlight to-light-muted bg-clip-text text-3xl font-bold tracking-tight text-transparent antialiased selection:text-light dark:from-dark-highlight dark:to-dark selection:dark:text-dark"
        >
          Lucas Costa
        </span>
        <div class="flex justify-center gap-x-2 md:justify-start">
          <Link
            text="Github"
            icon="mdi:github"
            side="left"
            alt="Github Icon"
            href="https://github.com/lzldev"
          />
          <Link
            text="Linkedin"
            icon="mdi:linkedin"
            alt="Linkedin Icon"
            side="left"
            href="https://www.linkedin.com/in/lucas-costa-83b881275/"
          />
        </div>
      </div>
      <Content />
    </div>
  </Main>
  <Footer>
    <Source />
  </Footer>
</Layout>
